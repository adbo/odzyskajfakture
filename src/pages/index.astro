    <script>
      // Calculator logic
      const invoicesSlider = document.getElementById('invoices');
      const avgValueSlider = document.getElementById('avg-value');
      const latePercentSlider = document.getElementById('late-percent');

      const invoicesValue = document.getElementById('invoices-value');
      const avgValueDisplay = document.getElementById('avg-value-display');
      const latePercentValue = document.getElementById('late-percent-value');

      const monthlyLoss = document.getElementById('monthly-loss');
      const recoverValue = document.getElementById('recover-value');
      const roiValue = document.getElementById('roi-value');

      function formatNumber(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
      }

      function calculate() {
        const invoices = parseInt(invoicesSlider.value);
        const avgValue = parseInt(avgValueSlider.value);
        const latePercent = parseInt(latePercentSlider.value);

        // Update displays
        invoicesValue.textContent = invoices;
        avgValueDisplay.textContent = formatNumber(avgValue);
        latePercentValue.textContent = latePercent;

        // Calculate
        const lateInvoices = Math.round(invoices * (latePercent / 100));
        const totalLate = lateInvoices * avgValue;
        const recovered = Math.round(totalLate * 0.65); // 65% recovery rate
        const monthlyFee = 597; // Pro plan
        const roi = Math.round((recovered / monthlyFee) * 100);

        // Update results
        monthlyLoss.textContent = formatNumber(totalLate) + ' PLN';
        recoverValue.textContent = formatNumber(recovered) + ' PLN';
        roiValue.textContent = formatNumber(roi) + '%';
      }

      invoicesSlider.addEventListener('input', calculate);
      avgValueSlider.addEventListener('input', calculate);
      latePercentSlider.addEventListener('input', calculate);

      // Initial calculation
      calculate();
    </script>
